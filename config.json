{
  "main": {
    "environment": {
      "OPENAI_API_KEY": "<insert your OPENAI API KEY here>"
    },
    "volumes": [
      "/var/opt/loko/langchain/resources/:/plugin/resources/"
    ]
  },
  "side_containers": {
    "chromadb": {
      "image": "server",
      "environment": {
        "ANONYMIZED_TELEMETRY": "False",
        "ALLOW_RESET": "True",
        "IS_PERSISTENT": "TRUE"
      },
      "volumes": [
        "/var/opt/loko/chroma/chroma:/chroma/chroma",
        "/var/opt/loko/chroma/index:/index_data"
      ],
      "ports": {
        "8000": null
      }
    }
  }
}